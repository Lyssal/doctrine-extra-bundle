{% if breadcrumbs|length > 1 -%}
    <nav role="navigation">
        <ul>
            {%- for breadcrumb in breadcrumbs -%}
                <li>
                    {%- if breadcrumb.link is not null -%}
                        <a href="{{ breadcrumb.link }}">
                    {%- endif -%}

                    {{ breadcrumb.label|raw }}

                    {%- if breadcrumb.link is not null -%}
                        </a>
                    {%- endif -%}
                </li>
            {%- endfor -%}
        </ul>
    </nav>
{%- endif -%}
